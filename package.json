{
  "name": "searchium",
  "displayName": "searchium",
  "description": "local indexing process for accelerated search",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/vs-chromium-project.txt"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Searchium",
        "properties": {
          "searchium.maxResults": {
            "type": "number",
            "default": 10000,
            "description": "Maximum number of search results to return."
          }
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "searchium",
          "title": "Searchium",
          "icon": "media/search-bolt-rounded.svg"
        }
      ]
    },
    "views": {
      "searchium": [
        {
          "id": "searchium-controls",
          "name": "Searchium",
          "type": "webview"
        },
        {
          "id": "searchium-results",
          "name": "Searchium Results",
          "type": "tree",
          "icon": "media/search_desktop.svg",
          "contextualTitle": "Searchium"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "searchium.enableCaseSensitivity",
          "when": "view == searchium-results && !searchium.caseSensitivityEnabled",
          "group": "navigation"
        },
        {
          "command": "searchium.disableCaseSensitivity",
          "when": "view == searchium-results && searchium.caseSensitivityEnabled",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "searchium.newSearch",
        "title": "New Search",
        "category": "Searchium"
      },
      {
        "command": "searchium.searchCurrentToken",
        "title": "Search Current Token",
        "category": "Searchium"
      },
      {
        "command": "searchium.enableCaseSensitivity",
        "title": "Enable Case Sensitive Search",
        "category": "Searchium",
        "enablement": "!searchium.caseSensitivityEnabled",
        "icon": "$(case-sensitive)"
      },
      {
        "command": "searchium.disableCaseSensitivity",
        "title": "Disable Case Sensitive Search",
        "category": "Searchium",
        "enablement": "searchium.caseSensitivityEnabled",
        "icon": "$(case-sensitive)"
      }
    ],
    "keybindings": [
      {
        "command": "searchium.searchCurrentToken",
        "key": "ctrl+shift+;"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "ts-node ./build.ts",
    "watch": "ts-node ./built.ts --watch",
    "pretest": "npm run build && npm run lint",
    "lint": "tsc --noEmit && tsc --noEmit -p ./tsconfig.webview.json && eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@bufbuild/buf": "^1.15.0-1",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "esbuild": "^0.17.13",
    "esbuild-plugin-copy": "^2.1.0",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1",
    "typescript": "~4.7.4"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^1.1.1",
    "@vscode/codicons": "^0.0.32",
    "@vscode/webview-ui-toolkit": "^1.2.2",
    "tiny-typed-emitter": "^2.1.0"
  }
}
