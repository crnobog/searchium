// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"C:/Program Files/Epic Games/UE_5.1",
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js"
			],
			"preLaunchTask": "npm: build",
		},
		{
			"name": "Extension Tests",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/out/test/suite/index"
			],
			"outFiles": [
				"${workspaceFolder}/out/test/**/*.js"
			],
			"preLaunchTask": "${defaultBuildTask}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Run Debug Server",
			"program": "${workspaceFolder}/target/debug/searchium-server.exe",
			"args": [],
			"env": {
				"SEARCHIUM_LOG": "searchium_server=DEBUG,searchium_server::fs_state=DEBUG",
				"RUST_BACKTRACE": "1"
			},
			"cwd": "${workspaceFolder}",
			"preLaunchTask": "Build Debug Server",
			"terminal": "integrated",
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Run Server",
			"program": "${workspaceFolder}/target/release/searchium-server.exe",
			"args": [],
			"env": {
				"SEARCHIUM_LOG": "searchium_server=INFO,searchium_server::fs_state=INFO",
				"RUST_BACKTRACE": "1"
			},
			"cwd": "${workspaceFolder}",
			"preLaunchTask": "Build Release Server",
			"terminal": "integrated",
		}
	],
	"compounds": [
		{
			"name": "Run Extension & Debug Server",
			"configurations": [
				"Run Extension",
				"Run Debug Server"
			],
			"stopAll": true
		},
		{
			"name": "Run Extension & Server",
			"configurations": [
				"Run Extension",
				"Run Server"
			],
			"stopAll": true
		}
	]
}
