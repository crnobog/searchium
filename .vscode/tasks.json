// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": "build",
			"label": "npm: watch",
			"detail": "tsc -watch -p ./"
		},
		{
			"type": "npm",
			"script": "build",
			"group": "build",
			"problemMatcher": [
				"$tsc",
				"$eslint-compact"
			],
			"label": "npm: build",
			"detail": "build extension",
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
		},
		{
			"type": "npm",
			"script": "lint",
			"problemMatcher": [
				"$tsc",
				"$eslint-compact"
			],
			"label": "npm: lint"
		},
		{
			"type": "npm",
			"script": "gen",
			"problemMatcher": [],
			"label": "npm: gen",
			"detail": "buf generate proto"
		},
		{
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "Build server",
		},
		{
			"type": "shell",
			"command": "cargo run --bin searchium-server",
			"group": "none",
			"label": "Run server",
			"isBackground": true,
			"options": {
				"env": {
					"SEARCHIUM_LOG": "searchium_server=DEBUG,searchium_server::fs_state=DEBUG",
					"RUST_BACKTRACE": "1"
				}
			},
			"dependsOrder": "sequence",
			"dependsOn": [
				"Build server"
			],
			"problemMatcher": {
				"owner": "external",
				"fileLocation": "relative",
				"pattern": {
					"regexp": "^NEVER(.)(.)(.)$",
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ": Building searchium index server",
					"endsPattern": ": Starting searchium index server",
				}
			},
			"presentation": {
				"echo": false,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated",
				"showReuseMessage": true,
				"clear": true
			}
		},
		{
			"label": "Build",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Build server & extension & lint",
			"dependsOn": [
				"Build server",
				"npm: build",
				"npm: lint"
			]
		},
		{
			"label": "prelaunch",
			"group": "none",
			"dependsOn": [
				"npm: build",
				"Run server"
			],
			"hide": true
		},
		{
			"label": "killserver",
			"group": "none",
			"hide": true,
			"type": "shell",
			"command": "Get-Process -Name searchium-server -ErrorAction SilentlyContinue | Stop-Process || $True",
			"runOptions": {
				"instanceLimit": 1
			},
			"presentation": {
				"echo": true,
				"reveal": "never",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		}
	]
}